function main() {
    install_dependencies
    download_source_code
    compile_and_install
    set_vim_as_default_editor
}

function install_dependencies() {
    sudo apt-get update
    sudo apt-get -y install libncurses5-dev libgnome2-dev libgnomeui-dev \
        libgtk2.0-dev libatk1.0-dev libbonoboui2-dev \
        libcairo2-dev libx11-dev libxpm-dev libxt-dev python-dev \
        ruby-dev

    sudo apt-get -y remove vim vim-runtime gvim vim-tiny vim-common vim-gui-common
}

function download_source_code() {
    mkdir -p ~/git/ && cd ~/git/
    git clone https://github.com/vim/vim.git
    cd ~/git/vim
}

function compile_and_install() {
    ./configure --with-features=huge \
                --enable-multibyte \
                --enable-rubyinterp \
                --enable-pythoninterp \
                --with-python-config-dir=/usr/lib/python2.7/config \
                --enable-perlinterp \
                --enable-luainterp \
                --enable-gui=gtk2 --enable-cscope --prefix=/usr
    make VIMRUNTIMEDIR=/usr/share/vim/vim74
    sudo make install
}

function set_vim_as_default_editor() {
    sudo update-alternatives --install /usr/bin/editor editor /usr/bin/vim 1
    sudo update-alternatives --set editor /usr/bin/vim
    sudo update-alternatives --install /usr/bin/vi vi /usr/bin/vim 1
    sudo update-alternatives --set vi /usr/bin/vim
}

if [ "$BASH_SOURCE" == "$0" ] ; then
    main
fi
